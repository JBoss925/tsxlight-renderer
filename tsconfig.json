{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "tsxlight.createElement",
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.json"
  ]
}